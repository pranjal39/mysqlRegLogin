<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Registering User</title>
  <link rel="stylesheet" href="bootstrap.min.css">
  <script>
    function validate() {

      //email validation
      const em1 = document.getElementById("em").value;
      const em2 = document.getElementById("em");
      const re_em = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
      if (re_em.test(em1)) {
        em2.style.border = "green solid 3px";
        document.getElementById("errEm").innerHTML = ":)";
      }
      else {
        em2.style.border = "red solid 3px";
        document.getElementById("errEm").innerHTML = "invalid";
      }

      //full name validation
      const fn1 = document.getElementById("fn").value;
      const fn2 = document.getElementById("fn");
      const re_fn = /(^[A-Za-z]{3,16})([ ]{0,1})([A-Za-z]{3,16})?([ ]{0,1})?([A-Za-z]{3,16})?([ ]{0,1})?([A-Za-z]{3,16})/;
      if (re_fn.test(fn1)) {
        fn2.style.border = "green solid 3px";
        document.getElementById("errFn").innerHTML = ":)";
      }
      else {
        fn2.style.border = "red solid 3px";
        document.getElementById("errFn").innerHTML = "invalid";
      }

      //password validation
      const pw1 = document.getElementById("pw").value;
      const pw2 = document.getElementById("pw");
      const re_pw = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$/;
      if (re_pw.test(pw1)) {
        pw2.style.border = "green solid 3px";
        document.getElementById("errPw").innerHTML = ":)";
      }
      else {
        pw2.style.border = "red solid 3px";
        document.getElementById("errPw").innerHTML = "invalid";
      }
    }
  </script>


</head>

<body>
  <div class="container"><br />
    <h1 align="center">User Registration</h1><br />
    <form action="/send-email" method="post" onsubmit=validate()>


      <div class="row">
        <div class="col-md-4"></div>
        <div class="form-group col-md-4">
          <label>Full Name</label>
          <input id="fn" type="text" class="form-control" name="uName" autocomplete="off">
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-4"></div>
        <div class="form-group col-md-4">
          <label>Email</label>
          <input id="em" type="email" class="form-control" name="Email" autocomplete="off">
        </div>
      </div>

     

      <div class="row">
        <div class="col-md-4"></div>
        <div class="form-group col-md-4">
          <label>Password</label>
          <input id="pw" type="password" class="form-control" name="psw" autocomplete="off">
        </div>
      </div>

      <div class="row">
        <div class="col-md-4"></div>
        <div class="form-group col-md-4">
          <button type="submit" class="btn btn-success">Register</button>
        </div>
      </div>
    </form>
  </div>
</body>

</html>


